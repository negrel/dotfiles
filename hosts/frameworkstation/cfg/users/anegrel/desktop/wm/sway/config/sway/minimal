# Environment & IO configuration

exec dbus-sway-environment
exec configure-gtk
exec polkit-gnome-authentication-agent

# Keyboard
input type:keyboard {
  xkb_layout fr
  repeat_delay 125
}

input type:touchpad {
	tap enabled
	natural_scroll enabled
	middle_emulation enabled
}

output eDP-1 scale 1

font monospace 16

seat seat0 xcursor_theme Adwaita 32
