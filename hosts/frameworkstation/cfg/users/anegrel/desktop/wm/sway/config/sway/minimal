# Environment & IO configuration

exec dbus-sway-environment
exec configure-gtk
exec polkit-gnome-authentication-agent

# Keyboard
input type:keyboard {
  xkb_layout fr
  repeat_delay 125
}

input type:touchpad {
	tap enabled
	natural_scroll enabled
	middle_emulation enabled
}

# Fractional scaling
output eDP-1 scale 1.59
# Right to external screen
output eDP-1 pos 1920 0
# External screen at 0, 0
output DP-3 pos 0 0
